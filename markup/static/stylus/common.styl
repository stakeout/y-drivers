// Common styles of the project
html
	box-sizing border-box
*, *:before, *:after
	box-sizing inherit
body
	position relative
	font-family $font
img
	max-width 100%
	height auto
	box-sizing content-box
a
	text-decoration none
ul
	list-style none
ul,li,p,h1,h2,h3
	margin 0
	padding 0
.heading
	color $c_dark
	+mobile-lg()
		text-align center
	&_h2
		font-size 24px
		font-weight 300
		line-height 1
.page
	display -webkit-flex
	display -ms-flex
	display flex
	min-height 100vh
	width 100%
	flex-direction column
	margin 0 auto
// .page__inner
// 	display: flex
.page-content
	flex 1
.center
	wrapper()
.show
	display block
.hide
	display none
.overlay
	display none
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background-color rgba(0,0,0,.5)
