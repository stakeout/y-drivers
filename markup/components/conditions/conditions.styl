.conditions
	padding-top 80px
	&__title
		margin-bottom 80px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		// justify-content space-around
	&__item
		flex-basis 200px
		padding-top 100px
		text-align center
		+netbook()
			flex-basis 190px
		b
			display block
			margin-bottom 20px
			color $c_black
			font-size 18px
			font-weight 400
			line-height 21px
		p
			color $c_black
			font-size 14px
			font-weight 300
			line-height 21px
		&_expirience,
		&_car,
		&_license,
		&_factors,
		&_internet
			background-repeat no-repeat
			background-size 60px
			background-position center top
		&_expirience
			background-image url(%=static=%minified-svg/1-1.svg)
		&_car
			background-image url(%=static=%minified-svg/1-2.svg)
		&_license
			background-image url(%=static=%minified-svg/1-3.svg)
		&_factors
			background-image url(%=static=%minified-svg/1-4.svg)
		&_internet
			background-image url(%=static=%minified-svg/1-5.svg)
			