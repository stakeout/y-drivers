.order-form
	margin-bottom 60px
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		align-items center
	&__form-group
		position relative
		margin-bottom 50px
		label
			display block
			color $c_white
			font-size 18px
			font-weight 400
			line-height 1
			text-align left
		input
			display block
			width 420px
			border none
			border-bottom 2px solid $c_orange
			background-color transparent
	&__submit
		display block
		width 200px
		height 50px
		color $c_black
		font-size 18px
		font-weight 400
		line-height 50px
		background-color $c_orange
		border-radius 5px
		border none
		box-shadow 0 3px 6px rgba(0, 0, 0, 0.25)
		