.registration
	margin-bottom 60px
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		align-items center
	&__form-group
		position relative
		margin-bottom 50px
		label
			display inline-block
			position absolute
			left 15px
			top 10px
			color $c_white
			font-size 18px
			font-weight 400
			line-height 1
			text-align left
			transition transform .4s ease
			&.field-active
				transform: translateY(-18px);
				font-size: 13px;
				color: $c_orange;
		input
			display block
			width 420px
			padding 10px 15px
			color $c_white
			font-size 18px
			border none
			border-bottom 2px solid $c_orange
			background-color transparent
			transition outline .4s ease
			&.field-active
				outline 1px solid rgba(255,255,255,.3)
	&__submit
		display block
		width 200px
		height 50px
		color $c_black
		font-size 18px
		font-weight 400
		line-height 50px
		background-color $c_orange
		border-radius 5px
		border none
		box-shadow 0 3px 6px rgba(0, 0, 0, 0.25)
.requirements
	display none	
